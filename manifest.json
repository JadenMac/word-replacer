{
    "name": "Word Replacer",
    "version": "1.0.0",
    "description": "Replace or blur any word or phrase across the web!",
    "manifest_version": 3,
    "permissions": ["scripting", "storage"],
    "options_ui": {
        "page": "options.html"
    },
    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "css": ["style.css"],
        "js": ["wordReplacer.js"]
    }
    ]
    


}